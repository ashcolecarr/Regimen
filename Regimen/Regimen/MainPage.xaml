<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Regimen"
             x:Class="Regimen.MainPage"
             Padding="5"
             Title="Exercise Regimen">

    <ScrollView>
        <StackLayout>
            <Label Text="{Binding CurrentDate, StringFormat='Exercise Regimen for {0:N}'}" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   FontSize="Large"/>
            <!-- Make sure HasUnevenRows = True or else some items may be cut off in each cell. -->
            <ListView x:Name="ExerciseListView" HasUnevenRows="True"
                      ItemsSource="{Binding Exercises}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}" FontSize="Medium"/>
                                <Label Text="{Binding Description}" FontSize="Micro"/>
                                <Label Text="{Binding Routine, StringFormat='Routine: {0:N}'}" FontSize="Small"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>
